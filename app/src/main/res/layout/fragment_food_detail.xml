<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:layout_margin="8dp" />

    <!-- Food Image -->
    <ImageView
        android:id="@+id/foodDetailImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/backButton" />

    <!-- Food Name -->
    <TextView
        android:id="@+id/foodDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodDetailImage"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Food Price -->
    <TextView
        android:id="@+id/foodDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodDetailName"
        android:textSize="16sp"
        android:textColor="#FF0000" />

    <!-- Merchant Name -->
    <TextView
        android:id="@+id/merchantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodDetailPrice"
        android:textSize="14sp" />

    <!-- Pickup Address -->
    <TextView
        android:id="@+id/pickupAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/merchantName"
        android:textSize="14sp" />

    <!-- Food Description -->
    <TextView
        android:id="@+id/foodDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickupAddress"
        android:textSize="14sp" />

    <!-- Reserve Button -->
    <Button
        android:id="@+id/reserveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FF0000"
        android:textColor="@android:color/white"
        android:text="Reserve" />
</RelativeLayout>