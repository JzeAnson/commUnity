<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Food Image -->
    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

    <!-- Food Name -->
    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <!-- Food Description -->
    <TextView
        android:id="@+id/foodDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available: 8:00 AM - 10:00 AM"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <!-- Food Price -->
    <TextView
        android:id="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 0.00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="4dp" />

    <!-- Merchant Name -->
    <TextView
        android:id="@+id/merchantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merchant Name"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <!-- Merchant Address -->
    <TextView
        android:id="@+id/merchantAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: No.6 Jalan Taman Setiawangsa..."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="4dp" />

    <!-- Customer Name -->
    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer: Jian Wen"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Customer Phone -->
    <TextView
        android:id="@+id/customerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 0123456789"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 0"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Order Date -->
    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2024-12-27"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Order Time -->
    <TextView
        android:id="@+id/orderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 12:30 PM"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Order Status -->
    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark" />
</LinearLayout>
